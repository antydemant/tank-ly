html
	head(lang="en")
		meta(charset="UTF-8")
		title Tank.ly | Home
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="/css/vendor/materialize.css", media="screen,projection")
		link(rel="stylesheet", href="/css/build/home.css")
