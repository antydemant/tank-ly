* {
  padding: 0;
  margin: 0;
}

html, body, .container {
  height: 100%;
}

body, .container {
  background-color: #000000;
  color: #0623ff;
  overflow: hidden;
  -ms-touch-action: none !important; /* DISABLE DOUBLE-TAP-ZOOM */
}

.container {
  width: 100%;
}

.control-wrap {
  width: 50%;
  height: 100%;
  float: left;
}

.control {
  font-size: 50px;
  border: 2px solid #0623ff;
  border-radius: 500px;
  height: 95%;
  width: 95%;
  text-align: center;
}

div.text {
  position: relative;
  top: 50%;
  margin-top: -25px;
}

.color, .enter-fullscreen {
  position: absolute;
  bottom: 0;
  width: 150px;
  height: 50px;
  left: 50%;
  margin-left: -81px;
  text-align: center;
  font-size: 36px;
  color: black;
}

.enter-fullscreen {
	display none
	bottom auto
	top 0
	background-color white
}